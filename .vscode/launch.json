{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "127.0.0.1:8080"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://127.0.0.1:8080",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "runtimeExecutable": "/path/to/your/chrome",
            "preLaunchTask": "Python: Django",
            "postDebugTask": "closeChrome"
        }
    ]
}
